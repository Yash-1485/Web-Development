<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="container w-full h-screen bg-zinc-900">
        <div class="form px-4 py-4">
            <h1 class="text-white text-4xl my-3">Enter your daily "Tasks" here</h1>
            <form action="/create" class="form w-full h-full bg-zinc-900" method="post">
                <input type="text" name="taskName" id="taskName" placeholder="Enter Task Name" class="w-full border border-white rounded-md block px-4 py-2 text-white" required>
                <textarea name="taskDetails" id="task" rows="5" placeholder="Enter Task Description" class="w-full border border-white rounded-md block resize-none mt-2 px-4 py-2 text-white" required></textarea>
                <input type="submit" value="Submit" class="text-white border border-white rounded-md px-4 py-2 mt-2 bg-blue-700 font-bold">
            </form>
        </div>
        <div class="tasks text-white px-4 py-2 flex gap-3 flex-wrap">
            <% if(files.length>0){ %>
                <% files.forEach(file=>{ %>
                    <div class="task border-2 border-zinc-600 px-3 py-2 rounded-md">
                        <h1 class="text-2xl tracking-tighter"><%= file %></h1>
                        <div class="links flex justify-between gap-6">
                            <a href="/file/<%= file %>" class="text-sm text-blue-500">Read More</a>
                            <a href="/edit/<%= file %>" class="text-sm text-zinc-500">Edit</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No tasks given</p>
            <% } %>
        </div>
    </div>
</body>
</html>